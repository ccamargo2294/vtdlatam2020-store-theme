{
  /* 
   VTD LATAM 2020 
   Configurando Templates con Block Apps 1
   Slider Layout
   https://vtex.io/docs/components/all/vtex.slider-layout@0.14.0/
   https://vtex.io/docs/recipes/layout/building-a-carousel-through-lists-and-slider-layout/
  */
  "store.home": {
    "blocks": [
      // "rich-text",
      "list-context.image-list#home",
      "info-card#pixel",
      "shelf#home",
      "responsive-layout.desktop#desktop",
      "responsive-layout.mobile#mobile",
      "info-card#iphone",
      "flex-layout.row",
      "modal-trigger#cupon"
    ]
  },

  "list-context.image-list#home": {
    "children": ["slider-layout#home-images"],
    "props": {
      "height": 600,
      "images": [{
          "image": "assets/banners/banner-home-1.png",
          "description": ""
        },
        {
          "image": "assets/banners/banner-home-2.png",
          "description": ""
        },
        {
          "image": "assets/banners/banner-home-3.png",
          "description": ""
        },
        {
          "image": "assets/banners/banner-home-4.png",
          "description": ""
        },
        {
          "image": "assets/banners/banner-home-5.png",
          "description": ""
        },
        {
          "image": "assets/banners/banner-home-6.png",
          "description": ""
        }
      ]
    }
  },
  "slider-layout#home-images": {
    "props": {
      "itemsPerPage": {
        "desktop": 1,
        "tablet": 1,
        "phone": 1
      },
      "infinite": true,
      "showPaginationDots": "never"
    }
  },

  "rich-text": {
    "props": {
      "text": "VTEX Training Day LATAM 2020",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "font": "t-heading-1",
      "color": "c-on-emphasis"
    }
  },
  "info-card#pixel": {
    "props": {
      "id": "infoCardPixel",
      "isFullModeStyle": true,
      "textPosition": "left",
      "imageUrl": "assets/pixel-4a-bg.png",
      "headline": "Presentamos el Pixel 4a.",
      "subhead": "Descubre lo que puede hacer",
      "callToActionText": "Conocer más",
      "callToActionUrl": "/",
      "textAlignment": "left",
      "blockClass": "infoCardPixel"
    }
  },
  "shelf#home": {
    "blocks": ["product-summary.shelf"],
    "props": {
      "orderBy": "OrderByTopSaleDESC",
      "paginationDotsVisibility": "desktopOnly",
      "productList": {
        "maxItems": 10,
        "itemsPerPage": 3,
        "minItemsPerPage": 1,
        "scroll": "BY_PAGE",
        "arrows": true,
        "titleText": "Más vendidos"
      }
    }
  },
  "info-card#iphone": {
    "props": {
      "id": "infoCardIphone",
      "isFullModeStyle": true,
      "textPosition": "center",
      "imageUrl": "assets/iphone-11-bg.png",
      "headline": "iPhone 11",
      "subhead": "Nada menos que todo lo que quieres.",
      "callToActionText": "Más información ›",
      "callToActionUrl": "/",
      "textAlignment": "center",
      "callToActionMode": "link",
      "blockClass": "infoCardIphone"
    }
  },
  "flex-layout.row": {
    "children": [
      "info-card#col-left",
      "flex-layout.col#col-right"
    ]
  },
  "info-card#col-left": {
    "props": {
      "id": "infoCardMacBook",
      "imageUrl": "assets/imac.png",
      "isFullModeStyle": true,
      "headline": "iMac",
      "subhead": "Todo-en-uno. Lista para todo.",
      "callToActionText": "Más información ›",
      "callToActionUrl": "/",
      "textPosition": "center",
      "textAlignment": "center",
      "callToActionMode": "link",
      "blockClass": "infoCardMacBook"
    }
  },
  "flex-layout.col#col-right": {
    "children": [
      "info-card#col-right-1",
      "info-card#col-right-2"
    ]
  },
  "info-card#col-right-1": {
    "props": {
      "id": "infoCardStadia",
      "imageUrl": "assets/stadia.png",
      "isFullModeStyle": false,
      "headline": "Stadia Edición Premier",
      "subhead": "El futuro de los videojuegos.",
      "callToActionText": "Ver más",
      "callToActionUrl": "/",
      "textAlignment": "center",
      "callToActionMode": "button",
      "blockClass": "infoCardStadia"
    }
  },
  "info-card#col-right-2": {
    "props": {
      "id": "infoCardGoogleHome",
      "imageUrl": "assets/google-home.png",
      "isFullModeStyle": false,
      "headline": "Google Home",
      "subhead": "Ayuda para tu hogar.",
      "callToActionText": "Ver más",
      "callToActionUrl": "/",
      "textAlignment": "center",
      "callToActionMode": "button",
      "blockClass": "infoCardGoogleHome"
    }
  },
  "responsive-layout.desktop#desktop": {
    "children": ["rich-text#desktop", "image#desktop"]
  },
  "responsive-layout.mobile#mobile": {
    "children": ["rich-text#mobile", "image#mobile"]
  },
  "rich-text#desktop": {
    "props": {
      "text": "# Tu Café, A Tu Manera \n ### Nueva Colección de Cafeteras",
      "textPosition": "LEFT",
      "textAlignment": "LEFT"
    }
  },
  "rich-text#mobile": {
    "props": {
      "text": "### Tu Café, A Tu Manera \n #### Nueva Colección de Cafeteras",
      "textPosition": "CENTER",
      "textAlignment": "CENTER"
    }
  },
  "image#desktop": {
    "props": {
      "src": "https://appliancetheme.vteximg.com.br/arquivos/Responsive-Image-Desktop.jpg?q=1",
      "link": {
        "url": "/small-appliances/coffee-makers"
      },
      "alt": "Coffee Makers Collection",
      "maxWidth": "100%"
    }
  },
  "image#mobile": {
    "props": {
      "src": "https://appliancetheme.vteximg.com.br/arquivos/Responsive-Image-Mobile.jpg?q=1",
      "link": {
        "url": "/small-appliances/coffee-makers"
      },
      "alt": "Coffee Makers Collection",
      "maxWidth": "100%"
    }
  },
  "modal-trigger#cupon": {
    "children": [
      "rich-text#cupon",
      "modal-layout#cupon"
    ]
  },
  "rich-text#cupon": {
    "props": {
      "text": "Ver cupón",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "font": "t-heading-3",
      "color": "c-on-emphasis"
    }
  },
  "modal-layout#cupon": {
    "children": [
      "rich-text#modal-content"
    ]
  },
  "rich-text#modal-content": {
    "props": {
      "text": "Cupón: VTDLATAM2020",
      "font": "t-heading-4",
      "color": "c-on-emphasis"
    }
  }
}